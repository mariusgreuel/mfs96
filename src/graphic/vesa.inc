WINDOW_SIZE		dw ?
WINDOW_SEGMENT_A	dw ?
WINDOW_SEGMENT_B	dw ?
MAP_FUNCTION		dd ?
BYTE_PER_ROW		dw ?
X_RESOLUTION		dw ?
Y_RESOLUTION		dw ?
CHAR_X_RESOLUTION	dw ?
CHAR_Y_RESOLUTION	dw ?
BITPLANES		db ?
BIT_PER_POINT		db ?
BANKS			db ?
MEMORY_MODEL		db ?
